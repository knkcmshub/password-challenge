{
	"semi": true,
	"singleQuote": true,
	"trailingComma": "es5",
	"jsxSingleQuote": true,
	"printWidth": 160,
	"tabWidth": 4,
	"useTabs": true,
	"arrowParens": "avoid",
	"bracketSpacing": false,
	"endOfLine": "lf",
	"plugins": ["prettier-plugin-jsdoc"],
	"overrides": [
		{
			"files": ["*.ts", "*.tsx"],
			"options": {
				"tsdoc": true,
				"jsdocPrintWidth": 80
			}
		},
		{
			"files": ["*.js", "*.jsx"],
			"options": {
				"jsdocPrintWidth": 80
			}
		}
	]
}
